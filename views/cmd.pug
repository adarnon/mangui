doctype html
html(lang='en')
  head
    title mangui: #{cmd.alias}
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/cmdapp.js')
  body
    div
        div Name: #{cmd.name}
        div Synopsis: #{cmd.synopsis}
        div Description: #{cmd.description}
        div Command:
            div
                input#bash(type='text' data-alias=cmd.alias value=cmd.alias readonly)
                button(type='button' onclick='copycmd()') Copy to clipboard
            div
                button(type='button' onclick='runcmd()') Run!
                textarea#output(cols=60 rows=20 readonly)
        table(style='width:80%', border='2')
            tr
                td(colspan='2')
                    | Search: 
                    input#search(type='text' onkeyup='search(this)')
            tr
                th Option
                th Description
            each opt in cmd.options
                tr.opt
                    td
                        table(border='1')
                            each arg in opt.args
                                tr
                                    td.srch= arg.name
                                    td
                                        if arg.type == 'binary'
                                            input.choice(type='checkbox' data-name=arg.name onchange='onChange()')
                                            
                                        else if arg.type == 'str'
                                            input.choice(type='text' data-name=arg.name onkeyup='onChange()')
                    td.srch= opt.desc
